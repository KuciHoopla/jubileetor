{% extends "_main.jinja2" %}

{% block title %} Jubillant {{ customer_data[0] }} {% endblock %}


{% block main %}

 {% if customer_data %}
     <div class="container" style="padding: 30px;">
        <div class="container">
            <div class="card" style="width: 18rem;">
                <img src="{{ url_for("static", filename=photo_link) }}" class="card-img-top" alt="customer photo">
                <div class="card-body">
                    <p>{{ customer_data[0] }}</p>
                    <p>{{ customer_data[1] }}</p>
                </div>
            </div>
        </div>

        <div class="container" style="padding: 30px;">
            <form action="{{ url_for("add_gift", id_customer=id_customer) }}"
               method="post" enctype="multipart/form-data" style="width: 80%;" >
                <div class="form-group row">
                    <label for="inputFile" class="col-sm-2 col-form-label">Photo:</label>
                    <div class="col-sm-10">
                        <input type="file" name="inputFile">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" value="login" id="btn_add_gift" class="btn btn-primary">Add photo</button>
                    </div>
                </div>

            </form>
            </div>

     <div class="container">
        <form action="{{ url_for("add_gift", id_customer=id_customer) }}" method="post" enctype="multipart/form-data" style="width: 80%;" >
            <div class="form-group row">
                <label for="inputGiftPhoto" class="col-sm-2 col-form-label">Gift photo:</label>
                <div class="col-sm-10">
                    <input type="file" name="giftPhoto"  id="inputGiftPhoto">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputLink" class="col-sm-2 col-form-label">Gift link:</label>
                <div class="col-sm-10">
                    <input type="text" name="link" class="form-control" id="inputlink">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputGiftPhoto" class="col-sm-2 col-form-label">Gift description:</label>
                <div class="col-sm-10">
                    <input type="text" name="description" class="form-control" id="inputGiftPhoto">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" value="login" id="btn_add_gift" class="btn btn-primary">Add gift</button>
                </div>
             </div>
        </form>

{% else %}
<p> No Customers  </p>
{% endif %}


    <div class="container" style="padding: 30px;">
           {% if gifts %}

    <table style="width:100%" class="table table-striped table-bordered table-dark table-sm">

      <tbody>
        {% for gift in gifts %}
      <tr>

            <td style="width:40%" class="font-weight-bold" ><img id="customer_photo"
            src="{{ url_for('static', filename=gift['photo']) }}" alt="gift_photo">
            </td>
        <td style="width:10%" class="font-weight-bold"><a href="{{ gift["link"]}}">Link</a></td>
        <td style="width:50%" class="font-weight-bold">{{ gift["description"]}}</td>
      </tr>

        {% endfor %}
         </tbody>
         </table>
        {% else %}
             <div class="container">
                <p> I don't want anything </p>
            </div>
        {% endif %}
    </div>
{% endblock %}